<div class="bg-white">

  <!-- Hero Section with Background Image -->
  <section class="position-relative overflow-hidden d-flex align-items-center" style="min-height: 70vh; background-image: linear-gradient(135deg, rgba(102, 126, 234, 0.4) 0%, rgba(118, 75, 162, 0.4) 100%), url('<%= asset_path("hero.jpg") %>'); background-size: cover; background-position: center; background-attachment: fixed;">
    <div class="container-fluid">
      <div class="row min-vh-70 align-items-center">
        <div class="col-lg-6 py-5" style="padding-left: 5rem;">
          <div class="text-white">
            <h1 class="display-3 fw-bold mb-4" style="line-height: 1.2;">
              AI-Powered Job Applications
            </h1>
            <p class="lead mb-5" style="font-size: 1.25rem; max-width: 500px; opacity: 0.9;">
              Upload your CV and job description, get personalized cover letters, company insights,
              and video pitch scripts. Land your dream job with AI assistance.
            </p>
            <div class="d-flex flex-column flex-sm-row gap-3">
              <% if user_signed_in? %>
                <%= link_to 'Go to Dashboard <i class="bi bi-arrow-right ms-2"></i>'.html_safe,
                            applications_path,
                            class: "btn btn-light btn-lg d-inline-flex align-items-center shadow-lg px-5 py-3" %>
                <%= link_to 'Create Application <i class="bi bi-plus-circle ms-2"></i>'.html_safe,
                            new_application_path,
                            class: "btn btn-outline-light btn-lg d-inline-flex align-items-center px-5 py-3" %>
              <% else %>
                <%= link_to 'Get Started Free <i class="bi bi-arrow-right ms-2"></i>'.html_safe,
                            new_user_registration_path,
                            class: "btn btn-light btn-lg d-inline-flex align-items-center shadow-lg px-5 py-3" %>
                <%= link_to 'See How It Works <i class="bi bi-play-circle ms-2"></i>'.html_safe,
                            '#how-it-works',
                            class: "btn btn-outline-light btn-lg d-inline-flex align-items-center px-5 py-3" %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-lg-6 d-flex align-items-center justify-content-center py-5">
          <!-- Hero background image covers the full section -->
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-5" style="padding-top: 6rem !important; padding-bottom: 6rem !important;">
    <div class="container">
      <div class="text-center mb-5" style="margin-bottom: 4rem !important;">
        <h2 class="display-5 fw-bold text-dark mb-4">
          Everything you need to succeed
        </h2>
        <p class="lead text-secondary" style="max-width: 600px; margin: 0 auto;">
          Our AI analyzes your profile and target job to create personalized application materials
        </p>
      </div>

      <div class="row g-5">
        <div class="col-md-4">
          <div class="bg-white rounded-4 shadow-sm border p-5 text-center h-100 position-relative" style="border-color: #e5e7eb !important; transition: all 0.3s ease;">
            <div class="d-flex justify-content-center mb-4">
              <div class="rounded-circle d-flex align-items-center justify-content-center border-3" style="background-color: rgba(102, 126, 234, 0.1); border-color: rgba(102, 126, 234, 0.3) !important; width: 80px; height: 80px;">
                <i class="bi bi-chat-square-text fs-3" style="color: #667eea;"></i>
              </div>
            </div>
            <h3 class="h4 fw-bold text-dark mb-4">Smart Cover Letters</h3>
            <p class="text-secondary" style="line-height: 1.7;">
              AI analyzes the job description and your experience to craft compelling,
              personalized cover letters that get noticed.
            </p>
          </div>
        </div>

        <div class="col-md-4">
          <div class="bg-white rounded-4 shadow-sm border p-5 text-center h-100 position-relative" style="border-color: #e5e7eb !important; transition: all 0.3s ease;">
            <div class="d-flex justify-content-center mb-4">
              <div class="rounded-circle d-flex align-items-center justify-content-center border-3" style="background-color: rgba(102, 126, 234, 0.1); border-color: rgba(102, 126, 234, 0.3) !important; width: 80px; height: 80px;">
                <i class="bi bi-building fs-3" style="color: #667eea;"></i>
              </div>
            </div>
            <h3 class="h4 fw-bold text-dark mb-4">Company Insights</h3>
            <p class="text-secondary" style="line-height: 1.7;">
              Get detailed company analysis and talking points to show you've done your research
              and understand their business.
            </p>
          </div>
        </div>

        <div class="col-md-4">
          <div class="bg-white rounded-4 shadow-sm border p-5 text-center h-100 position-relative" style="border-color: #e5e7eb !important; transition: all 0.3s ease;">
            <div class="d-flex justify-content-center mb-4">
              <div class="rounded-circle d-flex align-items-center justify-content-center border-3" style="background-color: rgba(102, 126, 234, 0.1); border-color: rgba(102, 126, 234, 0.3) !important; width: 80px; height: 80px;">
                <i class="bi bi-camera-video fs-3" style="color: #667eea;"></i>
              </div>
            </div>
            <h3 class="h4 fw-bold text-dark mb-4">Video Pitch Scripts</h3>
            <p class="text-secondary" style="line-height: 1.7;">
              Receive professionally crafted video pitch scripts tailored to your background
              and the specific role you're applying for.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How it Works Section -->
  <section id="how-it-works" class="py-5 bg-light" style="padding-top: 6rem !important; padding-bottom: 6rem !important;">
    <div class="container">
      <div class="text-center mb-5" style="margin-bottom: 4rem !important;">
        <h2 class="display-5 fw-bold text-dark mb-4">
          How it works
        </h2>
        <p class="lead text-secondary" style="max-width: 600px; margin: 0 auto;">
          Get professional application materials in three simple steps
        </p>
      </div>

      <div class="row g-5" style="margin-top: 2rem;">
        <div class="col-md-4 text-center">
          <div class="position-relative mb-5">
            <div class="d-flex justify-content-center mb-4">
              <div class="rounded-circle d-flex align-items-center justify-content-center shadow-lg" style="background: linear-gradient(135deg, #1EDD88 0%, #17c474 100%); width: 120px; height: 120px;">
                <i class="bi bi-upload text-white" style="font-size: 3rem;"></i>
              </div>
            </div>
            <div class="position-absolute" style="top: -15px; right: 35%;">
              <span class="d-inline-flex align-items-center justify-content-center rounded-circle fw-bold text-white shadow-lg" style="width: 3rem; height: 3rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); font-size: 1.2rem;">
                1
              </span>
            </div>
          </div>
          <h3 class="h4 fw-bold text-dark mb-4">Upload JD & CV</h3>
          <p class="text-secondary" style="line-height: 1.7; max-width: 300px; margin: 0 auto;">
            Simply upload your CV and the job description. Our AI analyzes both documents
            to understand your background and the role requirements.
          </p>
        </div>

        <div class="col-md-4 text-center">
          <div class="position-relative mb-5">
            <div class="d-flex justify-content-center mb-4">
              <div class="rounded-circle d-flex align-items-center justify-content-center shadow-lg" style="background: linear-gradient(135deg, #1EDD88 0%, #17c474 100%); width: 120px; height: 120px;">
                <i class="bi bi-cpu text-white" style="font-size: 3rem;"></i>
              </div>
            </div>
            <div class="position-absolute" style="top: -15px; right: 35%;">
              <span class="d-inline-flex align-items-center justify-content-center rounded-circle fw-bold text-white shadow-lg" style="width: 3rem; height: 3rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); font-size: 1.2rem;">
                2
              </span>
            </div>
          </div>
          <h3 class="h4 fw-bold text-dark mb-4">AI Magic Happens</h3>
          <p class="text-secondary" style="line-height: 1.7; max-width: 300px; margin: 0 auto;">
            Our AI generates personalized cover letters, company insights,
            and pitch scripts based on your profile and the job requirements.
          </p>
        </div>

        <div class="col-md-4 text-center">
          <div class="position-relative mb-5">
            <div class="d-flex justify-content-center mb-4">
              <div class="rounded-circle d-flex align-items-center justify-content-center shadow-lg" style="background: linear-gradient(135deg, #1EDD88 0%, #17c474 100%); width: 120px; height: 120px;">
                <i class="bi bi-check2-circle text-white" style="font-size: 3rem;"></i>
              </div>
            </div>
            <div class="position-absolute" style="top: -15px; right: 35%;">
              <span class="d-inline-flex align-items-center justify-content-center rounded-circle fw-bold text-white shadow-lg" style="width: 3rem; height: 3rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); font-size: 1.2rem;">
                3
              </span>
            </div>
          </div>
          <h3 class="h4 fw-bold text-dark mb-4">Review & Apply</h3>
          <p class="text-secondary" style="line-height: 1.7; max-width: 300px; margin: 0 auto;">
            Review all generated materials, make final edits, and download your complete
            application package ready for submission.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials" class="py-5" style="padding-top: 6rem !important; padding-bottom: 6rem !important;">
    <div class="container">
      <div class="text-center mb-5" style="margin-bottom: 4rem !important;">
        <h2 class="display-5 fw-bold text-dark mb-4">
          Loved by job seekers
        </h2>
        <p class="lead text-secondary" style="max-width: 600px; margin: 0 auto;">
          See what our users say about their experience
        </p>
      </div>

      <div class="row g-5">
        <div class="col-md-4">
          <div class="bg-white rounded-4 shadow-sm border p-5 h-100" style="border-color: #e5e7eb !important;">
            <div class="d-flex mb-4">
              <% 5.times do %>
                <i class="bi bi-star-fill text-warning me-1" style="font-size: 1.1rem;"></i>
              <% end %>
            </div>
            <p class="text-secondary fst-italic mb-4" style="font-size: 1.1rem; line-height: 1.7;">
              "PitchUpYourLife helped me land interviews at 3 top tech companies. The cover letters
              were so much better than what I could write myself."
            </p>
            <div class="d-flex align-items-center mt-auto">
              <div class="rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <i class="bi bi-person-fill text-white fs-4"></i>
              </div>
              <div>
                <p class="fw-bold text-dark mb-0" style="font-size: 1.1rem;">Sarah Chen</p>
                <p class="text-secondary mb-0">Software Engineer</p>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="bg-white rounded-4 shadow-sm border p-5 h-100" style="border-color: #e5e7eb !important;">
            <div class="d-flex mb-4">
              <% 5.times do %>
                <i class="bi bi-star-fill text-warning me-1" style="font-size: 1.1rem;"></i>
              <% end %>
            </div>
            <p class="text-secondary fst-italic mb-4" style="font-size: 1.1rem; line-height: 1.7;">
              "The company insights were incredibly detailed. I felt so prepared for my interviews
              and got the job at my dream startup!"
            </p>
            <div class="d-flex align-items-center mt-auto">
              <div class="rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <i class="bi bi-person-fill text-white fs-4"></i>
              </div>
              <div>
                <p class="fw-bold text-dark mb-0" style="font-size: 1.1rem;">Michael Rodriguez</p>
                <p class="text-secondary mb-0">Product Manager</p>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="bg-white rounded-4 shadow-sm border p-5 h-100" style="border-color: #e5e7eb !important;">
            <div class="d-flex mb-4">
              <% 5.times do %>
                <i class="bi bi-star-fill text-warning me-1" style="font-size: 1.1rem;"></i>
              <% end %>
            </div>
            <p class="text-secondary fst-italic mb-4" style="font-size: 1.1rem; line-height: 1.7;">
              "I was struggling with video interviews until I used the pitch scripts.
              They gave me the confidence and structure I needed."
            </p>
            <div class="d-flex align-items-center mt-auto">
              <div class="rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <i class="bi bi-person-fill text-white fs-4"></i>
              </div>
              <div>
                <p class="fw-bold text-dark mb-0" style="font-size: 1.1rem;">Emily Johnson</p>
                <p class="text-secondary mb-0">Marketing Specialist</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-5" style="padding-top: 6rem !important; padding-bottom: 6rem !important; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container text-center">
      <h2 class="display-5 fw-bold text-white mb-4">
        Ready to land your dream job?
      </h2>
      <p class="lead text-white opacity-75 mb-5" style="max-width: 600px; margin-left: auto; margin-right: auto;">
        Join thousands of successful job seekers using AI to get hired faster
      </p>
      <% if user_signed_in? %>
        <%= link_to 'Create Your First Application <i class="bi bi-arrow-right ms-2"></i>'.html_safe,
                    new_application_path,
                    class: "btn btn-light btn-lg d-inline-flex align-items-center shadow-lg px-5 py-3" %>
      <% else %>
        <%= link_to 'Start Your Application <i class="bi bi-arrow-right ms-2"></i>'.html_safe,
                    new_user_registration_path,
                    class: "btn btn-light btn-lg d-inline-flex align-items-center shadow-lg px-5 py-3" %>
      <% end %>
    </div>
  </section>

</div>
