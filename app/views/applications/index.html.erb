<div class="page-header">
  <h1 class="page-title">Application Dashboard</h1>
  <h2 class="page-subtitle">
    All your applications at a glance
  </h2>
</div>

<div class="container-fluid">
  <div class="d-flex justify-content-center" style="width: 1400px; margin: 0 auto;">
    <div class="d-flex flex-column" style="width: 100%;">

      <div class="d-flex gap-4" style="width: 100%;">
        <div class="d-flex flex-column gap-4" style="flex: 0 0 25%; max-width: 25%;">
          <!-- Profile Card -->
          <div class="card d-flex flex-column" style="background-color: #ffffff; border: 1px solid #e5e7eb; border-radius: 0.5rem; height: 250px;">
            <div class="card-body d-flex flex-column">
              <div class="d-flex align-items-center mb-3">
                <div class="profile-icon" style="width: 48px; height: 48px; background-color: #eff6ff; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 1rem;">
                  <i class="bi bi-person-fill fs-3" style="color: #1e40af;"></i>
                </div>
                <div>
                  <h5 class="fw-bold mb-0" style="color: #111827;"><%= current_user&.email&.split('@')&.first&.split('.')&.map(&:capitalize)&.join(' ') || 'User' %></h5>
                </div>
              </div>
              <div class="text-sm text-secondary flex-grow-1 d-flex flex-column justify-content-evenly">
                <p class="mb-0">Member Since: <%= current_user&.created_at&.strftime('%B %Y') || 'N/A' %></p>
                <p class="mb-0">Applications: <%= @applications&.count || 0 %></p>
                <p class="mb-0">Status: Active</p>
              </div>
              <div class="mt-auto">
                <%= link_to "Edit Profile â†’", edit_user_registration_path, class: "text-primary text-decoration-none" %>
              </div>
            </div>
          </div>

          <!-- Application Stats Card -->
          <div class="card" style="background-color: #ffffff; border: 1px solid #e5e7eb; border-radius: 0.5rem;">
            <div class="card-body">
              <h5 class="fw-bold mb-3" style="color: #111827;">Application Stats</h5>
              <div class="d-flex flex-column gap-3">
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-secondary">Total Applications</span>
                  <span class="badge rounded-pill" style="background-color: #f3f4f6; color: #374151;"><%= @applications&.count || 0 %></span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-secondary">This Week</span>
                  <span class="badge rounded-pill" style="background-color: #eff6ff; color: #1e40af;"><%= @applications&.select { |app| app.created_at >= 1.week.ago }&.count || 0 %></span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="d-flex flex-column gap-4" style="flex: 1;">
          <div class="card d-flex flex-column" style="background-color: #ffffff; border: 1px solid #e5e7eb; border-radius: 0.5rem; height: 250px;">
            <div class="card-body d-flex flex-column" style="height: 250px;">
              <h5 class="fw-bold mb-4" style="color: #111827;">Quick Actions</h5>
              <div class="row row-cols-1 row-cols-md-3 g-2 flex-grow-1 d-flex align-items-stretch" style="max-height: 180px;">
                              <div class="col">
                                  <%= link_to new_application_path, class: "d-flex flex-column text-center p-3 text-decoration-none h-100 border border-2 rounded-3 text-white", style: "background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);" do %>
                                      <div class="d-flex align-items-center justify-content-center mb-3 bg-light bg-opacity-25 rounded-circle mx-auto" style="width: 48px; height: 48px;">
                                          <i class="bi bi-plus-lg fs-5"></i>
                                      </div>
                                      <h6 class="fw-bold mb-1">New Application</h6>
                                      <small class="text-white-50">Start a new job application</small>
                                  <% end %>
                              </div>
                              <div class="col">
                                  <div class="d-flex flex-column text-center p-3 h-100 border border-2 rounded-3 text-white" style="background: linear-gradient(135deg, #657bedff 0%, #57a6f5ff 100%); opacity: 0.8;">
                                      <div class="d-flex align-items-center justify-content-center mb-3 bg-light bg-opacity-25 rounded-circle mx-auto" style="width: 48px; height: 48px;">
                                          <i class="bi bi-graph-up fs-5"></i>
                                      </div>
                                      <h6 class="fw-bold mb-1">Application Insights</h6>
                                      <small class="text-white-50">View application analytics</small>
                                      <div class="mt-auto pt-2">
                                          <span class="badge bg-light bg-opacity-25 text-white">Coming Soon</span>
                                      </div>
                                  </div>
                              </div>
                              <div class="col">
                                  <div class="d-flex flex-column text-center p-3 h-100 border border-2 rounded-3 text-white" style="background: linear-gradient(135deg, #8295f5ff 0%, #00f2fe 100%); opacity: 0.8;">
                                      <div class="d-flex align-items-center justify-content-center mb-3 bg-light bg-opacity-25 rounded-circle mx-auto" style="width: 48px; height: 48px;">
                                          <i class="bi bi-file-earmark-text fs-5"></i>
                                      </div>
                                      <h6 class="fw-bold mb-1">CV Templates</h6>
                                      <small class="text-white-50">Pre-built CV templates</small>
                                      <div class="mt-auto pt-2">
                                          <span class="badge bg-light bg-opacity-25 text-white">Coming Soon</span>
                                      </div>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>

                  <!-- Your Applications Card with Fixed Height and Scroller -->
                  <div class="card" style="background-color: #ffffff; border: 1px solid #e5e7eb; border-radius: 0.5rem; height: 450px;">
                      <div class="card-body d-flex flex-column" style="height: 450px;">
                          <!-- Header with Title and Search -->
                          <div class="d-flex justify-content-between align-items-center mb-4">
                              <h5 class="fw-bold mb-0" style="color: #111827;">Your Applications</h5>

                              <!-- Search Bar -->
                              <div class="input-group" style="width: 250px;">
                                  <span class="input-group-text" style="background-color: transparent; border: 1px solid #e5e7eb; border-right: none; border-top-left-radius: 0.5rem; border-bottom-left-radius: 0.5rem;">
                                      <i class="bi bi-search" style="color: #9ca3af; font-size: 0.875rem;"></i>
                                  </span>
                                  <input type="text" class="form-control" placeholder="Search by role or company" style="background-color: transparent; border: 1px solid #e5e7eb; border-left: none; font-size: 0.875rem; border-top-right-radius: 0.5rem; border-bottom-right-radius: 0.5rem;">
                              </div>
                          </div>

                          <div class="flex-grow-1 overflow-auto" style="padding: 0 8px;">
                              <% if @applications&.any? %>
                                  <% @applications.reverse.each do |application| %>
                                      <div class="list-group-item d-flex justify-content-between align-items-center py-4 px-0" style="background-color: transparent; border: none; border-bottom: 1px solid #f3f4f6; margin-bottom: 8px;">
                                          <div>
                                              <%= link_to application_path(application), class: "fw-bold text-decoration-none", style: "color: #111827; font-size: 1.1rem;" do %>
                                                  <%= application.name %>
                                              <% end %>
                                              <div class="d-flex gap-2 mt-2">
                                                  <span class="badge rounded-pill" style="background-color: #fef3c7; color: #d97706;">Role: </span>
                                                  <small style="color: #6b7280;"><%= application.title %></small>
                                              </div>
                                              <small class="d-block mt-1" style="color: #9ca3af;">Created: <%= application.created_at.strftime('%B %d, %Y') %></small>
                                          </div>
                                          <div class="d-flex gap-2">
                                              <%= link_to application_path(application), class: "btn btn-sm", style: "background-color: #1EDD88; color: #ffffff;" do %>
                                                  <i class="bi bi-pencil me-1"></i> View
                                              <% end %>

                                              <%= button_to application_path(application), method: :delete,
                                                  data: { confirm: 'Are you sure you want to delete this application?' },
                                                  class: "btn btn-sm",
                                                  style: "background-color: #fee2e2; color: #dc2626; border: 1px solid #fecaca;" do %>
                                                  <i class="bi bi-trash">Delete</i>
                                              <% end %>
                                          </div>
                                      </div>
                                  <% end %>
                              <% else %>
                                  <div class="text-center py-5">
                                      <i class="bi bi-inbox fs-1" style="color: #9ca3af;"></i>
                                      <p class="mt-3" style="color: #6b7280;">No applications yet</p>
                                      <%= link_to "Create your first application", new_application_path, class: "btn mt-2", style: "background-color: #1EDD88; color: #ffffff;" %>
                                  </div>
                              <% end %>
                          </div>
                      </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>

<div class="pb-5"></div>
