<% formatted_results = prediction.formatted_results %>
<% salary_data = prediction.salary_prediction %>

<div class="row">
  <div class="col-md-8">
    <!-- Salary Range Display -->
    <div class="mb-4">
      <div class="d-flex align-items-center justify-content-center bg-light rounded py-4 mb-3">
        <div class="text-center">
          <h3 class="text-primary mb-1">
            <% if salary_data['min'] && salary_data['max'] %>
              <%= format_currency(salary_data['min'], salary_data['currency']) %> - 
              <%= format_currency(salary_data['max'], salary_data['currency']) %>
            <% elsif formatted_results[:range] %>
              <%= formatted_results[:range] %>
            <% else %>
              Salary data unavailable
            <% end %>
          </h3>
          <small class="text-muted">Expected Salary Range</small>
          
          <% if salary_data['estimated'] %>
            <div class="mt-2">
              <h4 class="text-success mb-0">
                <%= format_currency(salary_data['estimated'], salary_data['currency']) %>
              </h4>
              <small class="text-muted">Estimated Average</small>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Salary Range Visualization -->
      <% if salary_data['min'] && salary_data['max'] && salary_data['estimated'] %>
        <div class="salary-range-bar mb-3">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <small class="text-muted">Min</small>
            <small class="text-muted">Estimated</small>
            <small class="text-muted">Max</small>
          </div>
          
          <div class="position-relative">
            <div class="progress" style="height: 12px;">
              <div class="progress-bar bg-gradient" style="width: 100%; background: linear-gradient(90deg, #ffc107 0%, #28a745 50%, #17a2b8 100%);"></div>
            </div>
            
            <!-- Estimated marker -->
            <% estimated_position = ((salary_data['estimated'] - salary_data['min']).to_f / (salary_data['max'] - salary_data['min']) * 100).round(1) %>
            <div class="position-absolute" style="left: <%= estimated_position %>%; top: -5px; transform: translateX(-50%);">
              <div class="bg-dark rounded-circle" style="width: 6px; height: 22px;"></div>
            </div>
          </div>
          
          <div class="d-flex justify-content-between mt-1">
            <small class="text-muted"><%= format_currency(salary_data['min'], salary_data['currency']) %></small>
            <small class="text-success font-weight-bold">
              <%= format_currency(salary_data['estimated'], salary_data['currency']) %>
            </small>
            <small class="text-muted"><%= format_currency(salary_data['max'], salary_data['currency']) %></small>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Market Comparison -->
    <% if formatted_results[:market_comparison] %>
      <div class="mb-4">
        <h6 class="text-primary mb-3">ðŸ“Š Market Comparison</h6>
        <div class="row g-3">
          <div class="col-6">
            <div class="bg-light rounded p-3 text-center">
              <small class="text-muted d-block">Market Percentile</small>
              <strong><%= formatted_results[:market_comparison][:percentile] %></strong>
            </div>
          </div>
          <div class="col-6">
            <div class="bg-light rounded p-3 text-center">
              <small class="text-muted d-block">vs Market</small>
              <strong class="text-success"><%= formatted_results[:market_comparison][:comparison] %></strong>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="col-md-4">
    <!-- Salary Factors -->
    <h6 class="text-primary mb-3">âš¡ Salary Factors</h6>
    <% if formatted_results[:factors]&.any? %>
      <ul class="list-unstyled">
        <% formatted_results[:factors].each do |factor| %>
          <li class="d-flex align-items-center mb-2">
            <i class="bi bi-arrow-up-circle-fill text-success me-2"></i>
            <small><%= factor %></small>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted small">Analyzing salary factors...</p>
    <% end %>
    
    <!-- Confidence Level -->
    <div class="mt-3">
      <small class="text-muted d-block">Prediction Confidence</small>
      <div class="d-flex align-items-center mb-2">
        <div class="progress me-2" style="width: 80px; height: 8px;">
          <div class="progress-bar bg-<%= confidence_badge_color(prediction) %>" 
               style="width: <%= (prediction.confidence_score * 100).round %>%"></div>
        </div>
        <small class="text-muted"><%= (prediction.confidence_score * 100).round %>%</small>
      </div>
    </div>
  </div>
</div>

<!-- Negotiation Tips -->
<% if formatted_results[:negotiation_tips]&.any? %>
  <div class="mt-4">
    <h6 class="text-primary mb-3">ðŸ’¼ Negotiation Tips</h6>
    <div class="row g-2">
      <% formatted_results[:negotiation_tips].each_with_index do |tip, index| %>
        <div class="col-md-6">
          <div class="d-flex align-items-start">
            <span class="badge bg-primary rounded-pill me-2 mt-1" style="font-size: 0.7em;">
              <%= index + 1 %>
            </span>
            <small class="text-muted"><%= tip %></small>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<style>
.salary-range-bar .progress-bar {
  transition: all 0.3s ease;
}
</style>